.col-md-12.admin_banner_image
.col-md-12.dark-geometric
  .col-md-10.col-md-offset-1
    .row
      %h2
        .quiz-index-title
          Create Quiz

    %form{action: '/quizzes/new', method: "POST", :"accept-charset" => "utf-8", enctype: "multipart/form-data", id: "new-quiz"}
      .row
        .col-md-10
          .row
            %label.quiz_title_field Title
          .row
            %input{type: "text", "..." => "", name: "title", id: "title"}
          .row
            %label.display_quiz_label Display Quiz on Landing Page?
            %input{type: "checkbox", name: "displayed", class: "display_checkbox"}
      #questions
        .question_fields
          .row
            .col-md-1
            .col-md-10
              .row
                %label Question
              .row
                %input{type: "text", "..." => "", name: "[question][0][question_text]", class: "question_text", id: "question_text"}
                %input{type: "file", name: "[question][0]file", value: "", id: "file"}
          
          .answer_fields
            .row
              .col-md-2
              .col-md-10
                .row.field-margin
                  %input{type: "text", "..." => "", name: "[question][0][answer][0][response]", class: "answer_text"}
                .row
                  %input{type: "file", name: "[question][0][answer][0][file]", value: "", id: "answer_image"}
                .row
                  %ul
                    %li{style: "float: left;"}
                      %label.correct_answer_label 
                    %li{style: "float: left;"}
                      Correct Answer?
                    %li{style: "float: left; margin-left: 10px;"}
                      %input{type: "checkbox", name: "question[0][answer][0][correctness]", class: "checkbox"}
                .row
                  %button{ href: "#", class: "remove_answer btn btn-danger set-btn-width", name: "remove_answer" }
                    Remove Answer

          .answer_fields
            .row
              .col-md-2
              .col-md-10
                .row.field-margin
                  %input{type: "text", "..." => "", name: "[question][0][answer][1][response]", class: "answer_text"}
                .row
                  %input{type: "file", name: "[question][0][answer][1][file]", value: ""}
                .row
                  %ul
                    %li{style: "float: left;"}
                      %label.correct_answer_label 
                    %li{style: "float: left;"}
                      Set as correct answer
                    %li{style: "float: left; margin-left: 10px;"}
                      %input{type: "checkbox", name: "question[0][answer][1][correctness]", class: "checkbox"}
                .row
                  %button{ href: "#", class: "remove_answer btn btn-danger set-btn-width", name: "remove_answer" }
                    Remove Answer

          .answer_fields
            .row
              .col-md-2
              .col-md-10
                .row.field-margin
                  %input{type: "text", "..." => "", name: "[question][0][answer][2][response]", class: "answer_text"}
                .row
                  %input{type: "file", name: "[question][0][answer][2][file]", value: ""}
                .row
                  %ul
                    %li{style: "float: left;"}
                      %label.correct_answer_label 
                    %li{style: "float: left;"}
                      Set as correct answer
                    %li{style: "float: left; margin-left: 10px;"}
                      %input{type: "checkbox", name: "question[0][answer][2][correctness]", class: "checkbox"}
                .row
                  %button{ href: "#", class: "remove_answer btn btn-danger set-btn-width", name: "remove_answer" }
                    Remove Answer


          .qa-fields
            .row
              .col-md-2
              .col-md-10
                .row.field-margin
                  %button{ type: "button", class: "btn btn-primary set-btn-width adjusted add_answer", value: "Add Answer"}
                    Add Answer
            .row
              .col-md-1
              .col-md-10
                .row.field-margin
                  %button{ href: "#", class: "remove_answer btn btn-danger set-btn-width remove_question", value: "Remove Question" }
                    Remove Question

        .add_question_fields
          .row
            .col-md-1
            .col-md-10
              .row.field-margin
                %button{ type: "button", class: "set-btn-width btn btn-primary add_question", value: "Add Question"}
                  Add Question

      .row
        .col-md-10
          .row.field-margin
            %input{type: "submit", value: "Create Quiz!", class: "set-btn-width btn btn-success"}


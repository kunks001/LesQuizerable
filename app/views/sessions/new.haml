.sign-in-banner-image
  .col-md-12
    .row.vertical-offset-100
      .col-md-6.col-md-offset-3
        - if flash[:errors] && !flash[:errors].empty?
          .sign-in-flash-container
            = partial :_flash
      .col-md-4.col-md-offset-4.sign-in-box
        .panel.panel-default
          .panel-heading
            %h3.panel-title Please sign in
          .panel-body
            %form{"accept-charset" => "UTF-8", role: "form", method: "post", action: "/sessions", id: 'sign-in-form'}
              %fieldset
                .form-group
                  %input.form-control{name: "email", placeholder: "E-mail", type: "text"}/
                .form-group
                  %input.form-control{name: "password", placeholder: "Password", type: "password", value: ""}/
                .checkbox
                  %label
                    %input{name: "remember", type: "checkbox", value: "Remember Me"}/
                    Remember Me
                %input.btn.btn-lg.btn-success.btn-block{type: "submit", value: "Sign in"}/